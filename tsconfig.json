{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es2019",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "types": ["node", "jest"]
  },
  "exclude": [
    "./coverage",
    "./jest*.js",
    "./*config.js",
    "dist",
  ]
}
